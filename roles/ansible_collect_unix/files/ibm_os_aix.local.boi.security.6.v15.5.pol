severity:critical
stanzaempty:Failed
conditional: ifelse::match
segment: aix_OSR_var_adm_cron_allow_users
stanzastart: ^
stanzastop: $
# If the cron.allow file does not exist (allows root user only).
stanzacriteria: include:^cat\:\scannot\sopen\s\/var\/adm\/cron\/cron\.allow$
Conditions {
    if_passed {
		type: alwayspassed
	}
	if_failed {
# If the cron.allow file exists, only users whose login names appear in it can use the crontab command. The root user's log name must appear in the cron.allow file if the file exists. 
		type: match
		segment: aix_OSR_var_adm_cron_allow_users
		stanzastart: ^
		stanzastop: $
		stanzacriteria: include:^((\s*root\s*)|(\s*sys\s*)|(\s*adm\s*)){3}$
}
}

